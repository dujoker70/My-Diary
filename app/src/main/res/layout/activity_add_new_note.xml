<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.example.mydiary.AddNewNoteActivity">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/editTextTitleId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title_hint"
        android:inputType="textEmailAddress"
        android:textSize="23sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date "
        android:textStyle="bold"
        android:textSize="23sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />
    <DatePicker
        android:id="@+id/datePickerId"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:textAlignment="center"
        >
    </DatePicker>

    <TextView
        android:id="@+id/dateTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textColor="#000000"
        android:backgroundTint="#1e2880"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/startWritingId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1e2880"
        android:text="Start Writing"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="normal"
        />
</LinearLayout>
